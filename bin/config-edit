# ** Variables {{{
[ -z "$VISUAL" ] && VISUAL=/usr/local/bin/vim
choices=""
choices+="bash_profile\n"
choices+="bashrc\n"
choices+="profile\n"
choices+="vimrc\n"
choices+="bash_aliases\n"
choices+="Xresources\n"
choices+="i3\n"
choices+="i3status\n"
choices+="reminders\n"
choices+="cal\n"
# End variables }}}

# ** Get the choice {{{
chosen=$(echo -e "$choices" | \
    dmenu \
    -i \
    -p  'Edit:'\
    -fn 'Roboto-12' \
    -nb '#d33682' \
    -sf '#d33682' \
    -sb '#eee8d5' \
    -nf '#eee8d5')
# End choice }}}

case "$chosen" in
    bash_profile) "$VISUAL" "$HOME/.bash_profile" ;;
    bashrc) "$VISUAL" "$HOME/.bashrc" ;;
    profile) "$VISUAL" "$HOME/.profile" ;;
    vimrc) "$VISUAL" "$HOME/.vim/vimrc" ;;
    bash_aliases) "$VISUAL" "$XDG_CONFIG_HOME/bash_aliases" ;;
    Xresources) "$VISUAL" "$XDG_CONFIG_HOME/X11/Xresources" ;;
    i3) "$VISUAL" "$XDG_CONFIG_HOME/i3/config" ;;
    i3status) "$VISUAL" "$XDG_CONFIG_HOME/i3status/config" ;;
    reminders) "$VISUAL" "$XDG_CONFIG_HOME/remind/reminders.rem" ;;
    cal) "$VISUAL" "$XDG_DATA_HOME/cal.dat" ;;
    *) exit 2 ;;
esac

exit 0
