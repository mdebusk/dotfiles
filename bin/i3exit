# ** Declare variables {{{
choices=""
choices+="Lock\n"
choices+="Logout\n"
choices+="Restart\n"
choices+="Poweroff\n"
choices+="Suspend\n"
choices+="Hibernate"
lock_paper="$HOME"/Pictures/Wallpapers/lock.png
# End variables }}}

# ** Get selection {{{
chosen=$(echo -e "$choices" | \
    dmenu \
    -p  'Select:' \
    -i \
    -fn 'Roboto-21' \
    -nb '#dc322f' \
    -sf '#dc322f' \
    -sb '#eee8d5' \
    -nf '#eee8d5')
# End selection }}}

case "$chosen" in
    Lock) i3lock -i $lock_paper ;;
    Logout) i3-msg exit ;;
    Restart) systemctl reboot ;;
    Poweroff) systemctl poweroff ;;
    Suspend) systemctl suspend ;;
    Hibernate) systemctl hibernate ;;
    *) exit 2 ;;
esac

exit 0
