# ** Declare variables {{{
lock_paper="$HOME"/Pictures/Wallpapers/lock.png
font="Azeret Mono Bold 37"
lock="üîê   Lock"
logout="üòò   Logout"
shutdown="üòµ   Shutdown"
reboot="ü´¢   Reboot"
sleep="üò¥   Sleep"
hibernate="üêª   Hibernate"
# End variables }}}

# ** Get selection with rofi {{{
chosen=$(echo "$lock
$logout
$sleep
$reboot
$shutdown
$hibernate" | rofi -dmenu -i -p "Select" -font "$font" -lines 6\
    -line-margin 3 -line-padding 10 -scrollbar-width "0" )
# End selection }}}

# Do something based on selected option
case "$chosen" in
    $lock) i3lock -i "$lock_paper" ;;
    $logout) i3-msg exit ;;
    $shutdown) systemctl poweroff ;;
    $reboot) systemctl reboot ;;
    $sleep) systemctl suspend ;;
    $hibernate) systemctl hibernate ;;
esac

exit 0
