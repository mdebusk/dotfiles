PROG="rofi -dmenu -p"

# ** Main {{{
main() {
    notify-send -t 1500 "Testing Network Connection..."\
        & /usr/bin/ping -c 1 8.8.8.8 2>&1 > /dev/null
    [[ $? -eq 0 ]] && disconnect || connect
} # }}}


# ** Connect if not connected {{{
connect() {
    nmcli con up id "$(nmcli -t -f name c\
        | $PROG Connect)"\
        && notify-send "Connected to\
        $(nmcli con show --active\
        | awk -F '[[:space:]][[:space:]]' 'FNR==2 { print $1 }')"
} # }}}


# ** Disconnect if connected {{{
disconnect() {
    nmcli con down id "$(nmcli -t -f name c \
        | $PROG Disconnect)"\
        && notify-send "Network Disconnected"
} # }}}


main "$@"
