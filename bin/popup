# ** Functions {{{
show_weather() {
    notify-send -t 6000\
        "Weather in Aberdeen, MD" "$(weather)"\
            -i weather-app-symbolic
}


date_and_time() {
    notify-send -t 3500\
        "Date and Time" "$(date '+%Y-%m-%d (%A) %H:%M')"\
        -i calendar-app-symbolic
}


system_details() {
    notify-send\
        "System Status"\
        "$(fastfetch -c $XDG_CONFIG_HOME/fastfetch/plain.jsonc)"\
        -i dialog-information-symbolic
}


todo_list() {
    notify-send\
        "To Do"\
        "$(python ~/Source/t/t.py --task-dir $XDG_DATA_HOME/tasks --list tasks)"\
        -i to-do-app-symbolic
}


help_screen() {
    echo "usage: popup [OPTION]"
    echo "    -w    weather"
    echo "    -d    date and time"
    echo "    -s    system information"
    echo "    -t    todo list"
    echo "    -h    this help screen"
}

# End functions }}}


while getopts "wdsth" option; do
    case $option in
        w) show_weather
            exit;;
        d) date_and_time
            exit;;
        s) system_details
            exit;;
        t) todo_list
            exit;;
        h) help_screen
            exit;;
        *) # incorrect option
            echo "Error: Invalid option"
            exit;;
    esac
done
