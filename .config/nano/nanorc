# Options{{{
set atblanks
set autoindent
set backup
set backupdir "~/.cache/nano/backups"
set linenumbers
set minibar
set regexp
set softwrap
set tabsize 4
set tabstospaces
set titlecolor normal,normal
#}}}

# Syntax Highlighting{{{
# Files from https://github.com/scopatz/nanorc
include ~/.config/nano/syntax/nanorc/*.nanorc
#}}}

