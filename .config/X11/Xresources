! ** General settings {{{

#include "/home/michael/.config/X11/solarized_dark.xcolors"

*visualBell:      true
*urgentOnBell:    true
*scrollTtyOutput: False
*scrollKey:       True
*customization:   -color

! End general settings }}}

! ** Fonts {{{

! *** DejaVu Sans Mono (Inactive) {{{2
!! URxvt.font:xft:DejaVu Sans Mono:style=Book:size=9
!! URxvt.boldFontxft:DejaVu Sans Mono:style=Bold:size=9
!! URxvt.italicFontxft:DejaVu Sans Mono:style=Oblique:size=9
!! URxvt.boldItalicFont:xft:DejaVu Sans Mono:style=BoldOblique:size=9
! End DejaVu Sans Mono }}}

! *** Source Code Pro (Inactive) {{{2
!! URxvt.font:xft:Source Code Pro:style=Regular:size=9
!! URxvt.boldFontxft:Source Code Pro:style=Bold:size=9
!! URxvt.italicFontxft:Source Code Pro:style=Italic:size=9
!! URxvt.boldItalicFont:xft:Source Code Pro:style=Bold Italic:size=9
! End Source Code Pro }}}

! **** Azeret Mono (Active) {{{2
URxvt.font:xft:Azeret Mono:style=Regular:size=9
URxvt.boldFont:xft:Azeret Mono:style=Bold:size=9
URxvt.italicFont:xft:Azeret Mono:style=Italic:size=9
URxvt.boldItalicFont:xft:Azeret Mono:style=Bold Italic:size=9
! End Azeret Mono }}}

! *** Font display settings {{{2
*renderFont: true
Xft.dpi:        128
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.autohint:   true
Xft.hintstyle:  hintslight
Xft.minspace:   false
! End font display settings }}}

! End fonts }}}

! ** XClock-specific settings {{{
XClock.Clock.analog:false
XClock.Clock.face:Azeret Mono Medium:size=72
XClock.Clock.twentyfour:true
! End XClock }}}

! ** urxvt-specific settings {{{
#include "/home/michael/.config/X11/urxvt.cfg"
! End urxvt }}}

! ** XTerm-specific settings {{{
#include "/home/michael/.config/X11/xterm.cfg"
