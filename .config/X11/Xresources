! ** General settings {{{

! *** Fonts {{{2

! **** DejaVu Sans Mono (Inactive) {{{3
!! URxvt.font:xft:DejaVu Sans Mono:style=Book:size=9
!! URxvt.boldFontxft:DejaVu Sans Mono:style=Bold:size=9
!! URxvt.italicFontxft:DejaVu Sans Mono:style=Oblique:size=9
!! URxvt.boldItalicFont:xft:DejaVu Sans Mono:style=BoldOblique:size=9
! End DejaVu Sans Mono }}}

! **** Source Code Pro (Inactive) {{{3
!! URxvt.font:xft:Source Code Pro:style=Regular:size=9
!! URxvt.boldFontxft:Source Code Pro:style=Bold:size=9
!! URxvt.italicFontxft:Source Code Pro:style=Italic:size=9
!! URxvt.boldItalicFont:xft:Source Code Pro:style=Bold Italic:size=9
! End Source Code Pro }}}

! **** Azeret Mono (Active) {{{3
URxvt.font:xft:Azeret Mono:style=Regular:size=9
URxvt.boldFont:xft:Azeret Mono:style=Bold:size=9
URxvt.italicFont:xft:Azeret Mono:style=Italic:size=9
URxvt.boldItalicFont:xft:Azeret Mono:style=Bold Italic:size=9
! End Azeret Mono }}}

! **** Font display settings {{{3
*renderFont: true
Xft.dpi:        128
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.autohint:   true
Xft.hintstyle:  hintslight
Xft.minspace:   false
! End font display settings }}}

! End fonts }}}

#include "/home/michael/.config/X11/solarized_dark.xcolors"

*visualBell:      true
*urgentOnBell:    true
*scrollTtyOutput: False
*scrollKey:       True
*customization:   -color

! End general settings }}}

! ** URxvt-specific settings {{{

! Space between characters
URxvt.letterSpace: -1

! Every shell is a login shell by default (for inclusion of all
! necessary environment variables)
URxvt.loginshell:true

! I like a LOT of scrollback...
URxvt.savelines:16384

! Window size
URxvt.vt100*geometry:120x90

URxvt.termName:rxvt-unicode-256color
URxvt.depth:24

! Disable printing the terminal contents when pressing PrintScreen.
URxvt.print-pipe: "cat > /dev/null"

! *** Configure keypad {{{2
! https://github.com/tpope/dotfiles/blob/master/.Xresources
URxvt.keysym.KP_Up: string:\033[A
URxvt.keysym.KP_Down: string:\033[B
URxvt.keysym.KP_Right: string:\033[C
URxvt.keysym.KP_Left: string:\033[D
URxvt.keysym.KP_Begin: string:\033[E
URxvt.keysym.KP_Insert: string:\033[2~
URxvt.keysym.KP_Delete: string:\033[3~
URxvt.keysym.KP_Next: string:\033[5~
URxvt.keysym.KP_Prior: string:\033[6~
URxvt.keysym.KP_Home: string:\033[7~
URxvt.keysym.KP_End: string:\033[8~
URxvt.keysym.KP_Enter: string:\015
URxvt.keysym.KP_Add: string:+
URxvt.keysym.KP_Subtract: string:-
URxvt.keysym.KP_Multiply: string:*
URxvt.keysym.KP_Divide: string:/
! End keypad config }}}

! *** Configure other keys {{{2
! Scroll to bottom when a non-special key pressed
URxvt*scrollTtyKeypress:  true

! Do not scroll with scrollback buffer when tty recieves new lines
URxvt*scrollWithBuffer:  false

! Scroll up one line
URxvt.keysym.Shift-Up: command:\033]720;1\007

! Scroll down one line
URxvt.keysym.Shift-Down: command:\033]721;1\007

URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B

! Jump right one word
URxvt.keysym.Control-Right: \033[1;5C
! Jump left one word
URxvt.keysym.Control-Left: \033[1;5D
! End keys config }}}

URxvt.internalBorder: 11

! double-click to select whole URLs
URxvt.charClass:33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

!Set scrollbar style to rxvt, plain, next or xterm.
URxvt*scrollstyle: plain

! right hand side scrollbar
URxvt.scrollBar_right: true
URxvt.scrollBar: true

! Turn on/off ISO 14755 (default enabled).
! https://urxvt.wordpress.com/tag/iso-14755-mode/
URxvt*iso14755: False
URxvt.iso14755_52: false

! *** URxvt Plugins {{{2
URxvt*perl-lib: ~/.local/lib/
URxvt.perl-ext-common: default,matcher,font-size,keyboard-select

! `font-size` plugin
URxvt.font-size.step: 2

! "matcher" plugin
URxvt.url-launcher: xdg_open

! Keyboard-select plugin
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

URxvt.keysym.M-Delete:    perl:matcher:list
! End URxvt plugins}}}

! End URxvt-specific settings }}}

! ** XClock-specific settings {{{
XClock.Clock.analog:false
XClock.Clock.face:Azeret Mono Medium:size=72
XClock.Clock.twentyfour:true
! End XClock }}}
