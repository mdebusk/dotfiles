# 4.19. Automatically starting applications on i3 startup {{{
# Start compton
exec_always --no-startup-id 'compton -b'

# start pulseaudio
exec --no-startup-id i3-msg 'exec /usr/bin/pulseaudio --start'

# Start xautolock to automatically lock the screen after a timeout
exec_always xautolock -corners 00-0 -locker "i3lock -i /home/michael/Pictures/Wallpapers/i3-wallpaper.png"

# Enable tapping of Touchpad
exec xinput set-prop 13 287 1

# Set wallpaper
# exec --no-startup-id feh --bg-scale /home/michael/Pictures/Wallpapers/i3.png
# exec --no-startup-id feh --bg-scale /home/michael/Pictures/Wallpapers/i3keys.jpg
# exec --no-startup-id feh --bg-scale /home/michael/Pictures/Wallpapers/Mountains.png
exec --no-startup-id feh --bg-scale "/home/michael/Pictures/Wallpapers/Ubuntu Black.jpg"

# Start udiskie to manage auto-mounting of removable media
exec --no-startup-id /usr/bin/udiskie --tray

# Start Dropbox, PCloud, and InSync
# exec --no-startup-id dropbox start
exec --no-startup-id insync start
exec --no-startup-id /opt/Pcloud/pcloud start

# Start Network Manager Applet
exec --no-startup-id nm-applet

# Start Parcellite clipboard manager
exec --no-startup-id parcellite
# }}}

