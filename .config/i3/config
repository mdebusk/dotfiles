# 4.14: Arbitrary Commands For Specific Windows (for_window) {{{
# When starting Password Safe, put it in a floating window
for_window [class="Pwsafe" instance="pwsafe"] floating enable

# When starting KeePassXC, put it in a floating window
for_window [class="KeePassXC" instance="keepassxc"] floating enable

# When starting Gnome Calculator, put it in a floating window
for_window [class="Gnome-calculator" instance="gnome-calculator"] floating enable

# When starting Veracrypt, put it in a floating window
for_window [class="Veracrypt" instance="veracrypt"] floating enable

# When starting Anki, put it in a floating window
for_window [class="Anki" instance="anki"] floating enable
# }}}

