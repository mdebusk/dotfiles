! Xresources file for Michael DeBusk
! Last edited: 2021-02-06 20:57 

! Use a nice truetype font and size by default... 
! URxvt.font:xft:OpenDyslexicMono:style=Regular:size=7,xft:IBM Plex Mono:style=Regular:size=7
URxvt.font:xft:SourceCodePro-Regular:style=Regular:size=9,xft:IBM Plex Mono:style=Regular:size=9

! Every shell is a login shell by default (for inclusion of all necessary environment variables)
URxvt.loginshell:true

! I like a LOT of scrollback...
URxvt.savelines:16384

! Window size
URxvt.vt100*geometry:120x90

URxvt.termName:rxvt-unicode

! Disable printing the terminal contents when pressing PrintScreen.
URxvt.print-pipe: "cat > /dev/null"

! Configure Home and End keys {{{
URxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~
URxvt.keysym.KP_Home: \033[1~
URxvt.keysym.KP_End:  \033[4~
!}}}

! double-click to select whole URLs :D
URxvt.charClass:33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! right hand side scrollbar
URxvt.scrollBar_right: true
URxvt.ScrollBar: true

! stop output to terminal from jumping down to bottom of scroll again
URxvt.scrollTtyOutput:false

! URxvt Plugins {{{
URxvt.perl-ext:           default,matcher,font-size
! `font-size` plugin
URxvt.font-size.step: 2

! "matcher" plugin
URxvt.url-launcher:       firefox
! URxvt.keysym.C-Delete:    perl:matcher:last
URxvt.keysym.M-Delete:    perl:matcher:list
!}}}

